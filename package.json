{
  "name": "llmchat",
  "version": "1.0.0",
  "description": "智能体切换聊天应用 - 类似ChatGPT官网的多智能体切换功能",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run backend:build && npm run frontend:build",
    "prebackend:build": "npm install --workspace backend --no-audit --prefer-offline",
    "backend:build": "cd backend && npm run build",
    "prefrontend:build": "npm install --workspace frontend --no-audit --prefer-offline",
    "frontend:build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run backend:test && npm run frontend:test",
    "backend:test": "cd backend && npm test",
    "frontend:test": "cd frontend && npm test",
    "backend:lint": "cd backend && npm run lint",
    "frontend:lint": "cd frontend && npm run lint",
    "lint": "npm run backend:lint && npm run frontend:lint",
    "lint:fix": "npm run backend:lint -- --fix && npm run frontend:lint -- --fix"
  },
  "keywords": [
    "llm",
    "chat",
    "ai",
    "agent",
    "switching",
    "react",
    "typescript",
    "node"
  ],
  "author": "AI Developer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
